/* 容器样式 */
page {
  height: 100%;
}

/** 背景铺满并随内容滚动 **/
.page-bg {
  
  background-image: url("https://pic1.imgdb.cn/item/67f006aa0ba3d5a1d7ed6c7c.jpg");
  background-attachment: fixed;

}



.container {
  padding: 30rpx;
  background-color: #ffffff;
}

/* 图片区域 */
.image-container {
  margin-bottom: 40rpx;
  position: relative;
}

.main-image {
  width: 100%;
  display: block;
}

/* 文字内容区域 */
.text-container {
  padding: 0 20rpx;
}

.title {
  display: block;
  font-size: 40rpx;
  color: #2c3e50;
  font-weight: 500;
  margin-bottom: 40rpx;
  line-height: 1.4;
}

.content {
  font-size: 30rpx;
  color: #333333;
  line-height: 1.8;
}
